@model EditTransformalizeFilePartViewModel
@using TransformalizeModule.ViewModels
@using TransformalizeModule

@{
   var Area = Common.ModuleName;
   var ContentItemId = Model.TransformalizeFilePart.ContentItem.ContentItemId;
   var viewLink = Url.Action("Index", "File", new { Area, ContentItemId });
}

<fieldset>
   <div class="btn-group float-right" role="group">
      <a title="view this file"
         role="button"
         class="btn btn-success btn-sm"
         href="@viewLink">
         <span class="fas fa-eye"></span>
      </a>
   </div>
</fieldset>

